<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity">


    <TextView
        android:id="@+id/signup_title"
        style="@style/LabelStyle"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="Reset Password"
        android:textColor="@color/colorAccent"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/signup_welcome_msg"
        style="@style/LabelStyle"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signup_title"
        android:layout_marginStart="20dp"
        android:text="Forgot your password don't worry" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@id/signup_welcome_msg">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:background="@drawable/button_gb_round"
        android:textColor="@color/color1white"
        android:layout_below="@id/etEmail"
        android:text="@string/rpass" />


        <RelativeLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnPasswordReset">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@id/divider_or"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/divider_or"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:textColor="@color/divider_or"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@id/divider_or"
                android:background="@color/divider" />


        </RelativeLayout>

        <TextView
            android:id="@+id/reset"
            style="@style/LabelStyle"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Did you know"
            android:textSize="20sp"
            android:layout_below="@+id/divider"
            android:textColor="@color/colorAccent"
            android:layout_margin="20dp"/>
        <TextView
            style="@style/LabelStyle"
            android:textSize="15sp"
            android:layout_below="@id/reset"
            android:layout_marginStart="20dp"
            android:text="Once you pressed the button we will send you email." />

        <TextView
            style="@style/LabelStyle"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/reset"
            android:layout_marginStart="20dp"
            android:text="And through that mail you can be able to reset\nyour password." />
    </RelativeLayout>
</RelativeLayout>