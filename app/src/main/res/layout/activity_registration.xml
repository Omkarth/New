<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/signup_title"
        style="@style/LabelStyle"
        android:layout_margin="20dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="@string/signup_title"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/signup_welcome_msg"
        style="@style/LabelStyle"
        android:layout_below="@+id/signup_title"
        android:layout_marginStart="22dp"
        android:text="@string/signup_welcome_txt"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnRegister"
        android:layout_below="@id/signup_welcome_msg">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <RelativeLayout
                android:id="@+id/containerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:layout_marginTop="16dp"
                        android:hint="First Name"
                        android:maxLength="10"
                        android:inputType="textPersonName"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etUserLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etUserName"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:hint="Last Name"
                        android:maxLength="10"
                        android:inputType="textPersonName"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etUserLastName"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:hint="@string/email_address_hint"
                        android:inputType="textEmailAddress"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etUserEmail"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText

                        style="@style/EditTextStyle"
                        android:hint="@string/password_hint"
                        android:maxLength="15"
                        android:inputType="textPassword"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etMoibleno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etUserPassword"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true">

                    <!--                        app:met_mask="+(91)##########"-->
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:hint="@string/mobile_no"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etMoibleno"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:hint="@string/address"
                        android:inputType="textPostalAddress"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etAddress"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/EditTextStyle"
                        android:hint="@string/pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="20sp" />
                </android.support.design.widget.TextInputLayout>


            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider"
        android:layout_margin="20dp"
        android:background="@drawable/bg_radius"
        android:text="@string/signup_btn_label"
        android:textColor="#fff"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@id/divider_or"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/divider_or"
            style="@style/LabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/divider_or"

            android:textColor="@color/divider_or"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/divider_or"
            android:background="@color/divider" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/login_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:gravity="center">

        <TextView
            android:id="@+id/have_account"
            style="@style/LabelStyle"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="@string/have_account"
            android:textColor="@color/account"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login"
            style="@style/LabelStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/have_account"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="@string/login_label"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>

